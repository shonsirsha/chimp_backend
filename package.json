  "main": "server.js",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "crypto-random-string": "^3.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "express-validator": "^6.6.1",
    "http-server": "^0.12.3",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.4",
    "pg": "^8.3.3",
    "pm2": "^4.5.0",
    "redis": "^3.0.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {},
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run static & node server.js",
    "nodemon": "NODE_ENV=development && npm run static && nodemon server.js && nodemon authServer",
    "static": "http-server --port 7500",
    "prodInitLocal": "pm2 kill && npm run authServerInit_DEV && npm run restApiServerInit_DEV && npm run fileServer_DEV",
    "prodInit": "pm2 kill && npm run authServerInit_PROD && npm run restApiServerInit_PROD && npm run fileServer_PROD",
    "authServerInit_DEV": "NODE_ENV=development pm2 start --name auth-server authServer.js --watch",
    "restApiServerInit_DEV": "NODE_ENV=development  pm2 start --name rest-api-server server.js --watch",
    "fileServer_DEV": "pm2 start /usr/local/bin/http-server --name file-server -- -p 7500 -d --watch",
    "authServerInit_PROD": "NODE_ENV=production pm2 start --name auth-server authServer.js",
    "restApiServerInit_PROD": "NODE_ENV=production pm2 start --name rest-api-server server.js",
    "fileServer_PROD": "pm2 start /usr/bin/http-server --name file-server -- -p 7500 -d",
    "prodRestart": "pm2 restart all"
  },
